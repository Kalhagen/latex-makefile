#!/bin/bash

tex=share/bin/latex
papers=$(ls -d */ | sed -e "s/\///g" | sed -e "s/share//g")

depend(){
  depend=$(find $1 -regex ".*\.\(jpg\|gif\|png\|jpeg\|tex\|bib\|eps\)" -not -path "$1/out/*")
  echo $1.pdf: $depend
  echo -e "\t$tex $1"
  echo
}

rm -f makefile.d
for paper in $papers
do
  depend $paper >> makefile.d
done
